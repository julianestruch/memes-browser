{
  "name": "clipsearch",
  "version": "1.0.0",
  "description": "Plataforma de búsqueda semántica de clips de video",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "setup:db": "cd backend && npm run setup:db",
    "test:cloudinary": "node test-cloudinary.js"
  },
  "keywords": [
    "video",
    "search",
    "semantic",
    "clips",
    "ai"
  ],
  "author": "CodeGenius",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "dotenv": "^17.0.0",
    "form-data": "^4.0.3",
    "node-fetch": "^3.3.2"
  }
}
